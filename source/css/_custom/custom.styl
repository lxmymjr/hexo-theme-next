// Custom styles.
.posts-expand .post-meta {
  margin: 10px 0 10px 0;
}

.post-button {
  margin-top: 10px;
}

.posts-expand .post-eof {
  margin-top: 25px
  margin-bottom: 25px
  width: 100%;
}

.posts-expand {
  padding-top: 0;
}

.site-meta {
  background: #0080FF;
  padding: 0 5px;
}

body {
  background: url(/images/background.jpg);
  background-attachment: fixed;
}

.site-author-image {
  max-width: 100px;
}

.posts-expand .post-body {
  img {
    margin: 0;
    border: 0px solid $gray-lighter;
  }
}

.footer {
  color: white;
}

.posts-collapse {
  margin-left: 0;
}

.posts-collapse .collection-title {
  margin: 5px 0;
}

.posts-collapse .post {
  margin: 0 0;
}

.posts-collapse .post-title {
  margin-top: 0;
  margin-bottom: 0;
}

table {
  table-layout: auto;
  width: auto;
}

table td:nth-child(1) {
  /*首列不换行*/
  white-space: nowrap;
}

.menu {
  margin-top: 0;
  margin-bottom: 0;
}

.site-subtitle {
  margin: 0;
}

@media (max-width: 767px) {
  .posts-expand {
      margin: 0;
  }
}

.comments {
    margin-top: 0px;
}

.content-wrap {
    min-height: 500px;
    padding-bottom: 0px;
}

.pagination {
  margin: 40px 0 40px;
  border-top: 0px solid #eee;
}

.pagination .prev,
.pagination .next,
.pagination .page-number {
  border-top: 0px solid #eee;
}

@media (max-width: 767px) {
  .pagination .prev,
  .pagination .next,
  .pagination .page-number {
    border-bottom: 0px solid #eee;
  }
}

p {
    margin: 0;
}

.links-of-author {
    margin-top: 10px;
}

.links-of-blogroll {
    margin-top: 10px;
}

.links-of-blogroll-inline .links-of-blogroll-item {
  margin: 0;
}

.back-to-top {
  margin: 0px -10px -20px;
}

.sidebar-inner {
  padding: 10px 10px 20px 10px;
}